<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="LOG_PATTERN">%d{ISO8601} [%t] [%X{correlationId}] %-5p [%c{1}] - %X{ersReference} %m%n</Property>
        <Property name="APP_LOG_ROOT">/var/seamless/log/contract-management-system</Property>
        <Property name="APP_LOG_FILE_NAME">contract-management-system.log</Property>
    </Properties>

    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} [%t] [%X{correlationId}] %-5p [%c{1}] - %X{ersReference} %m%n"/>
        </Console>
                <RollingFile name="LogToFile"
                             fileName="${APP_LOG_ROOT}/${APP_LOG_FILE_NAME}"
                             filePattern="${APP_LOG_ROOT}/${APP_LOG_FILE_NAME}.%i.%d{dd-MM-yyyy-HH-mm-ss}.gz"
                             immediateFlush="true">
                             <PatternLayout>
                             <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
                             </PatternLayout>
                        <Policies>
                                <SizeBasedTriggeringPolicy size="200 MB" />
                                <OnStartupTriggeringPolicy />
                        </Policies>
                        <DefaultRolloverStrategy />
                </RollingFile>

                <RollingFile name="dataDump"
                             fileName="${APP_LOG_ROOT}/dump/contract-management-system-data.dump"
                             filePattern="${APP_LOG_ROOT}/dump/contract-management-system-data.dump.%i.%d{dd-MM-yyyy-HH-mm-ss}.gz"
                             immediateFlush="true">
                             <PatternLayout>
                             <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
                             </PatternLayout>
                        <Policies>
                                <SizeBasedTriggeringPolicy size="200 MB" />
                                <OnStartupTriggeringPolicy />
                        </Policies>
                        <DefaultRolloverStrategy />
                </RollingFile>


                <RollingFile name="auditDump"
                             fileName="${APP_LOG_ROOT}/dump/contract-management-system-audit.dump"
                             filePattern="${APP_LOG_ROOT}/dump/contract-management-system-audit.dump.%i.%d{dd-MM-yyyy-HH-mm-ss}.gz"
                             immediateFlush="true">
                             <PatternLayout>
                             <Pattern>%m%n</Pattern>
                             </PatternLayout>
                        <Policies>
                                <SizeBasedTriggeringPolicy size="200 MB" />
                                <OnStartupTriggeringPolicy />
                        </Policies>
                        <DefaultRolloverStrategy />
                </RollingFile>
    </Appenders>
    <Loggers>
            <Logger name="com.seamless.common.data.dump.DataFeeder" level="info">
                <AppenderRef ref="dataDump" />
            </Logger>
            <Logger name="com.seamless.common.data.dump.AuditFeeder" level="info">
                <AppenderRef ref="auditDump" />
            </Logger>
        <Logger name="se.seamless" level="INFO" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Logger>

        <Logger name="org.springframework.boot" level="INFO" additivity="false">
		<AppenderRef ref="LogToConsole"/>
		<AppenderRef ref="LogToFile"/>
        </Logger>

        <Logger name="SeamlessGenericModelImpl" level="INFO" additivity="false">
		<AppenderRef ref="LogToConsole"/>
		<AppenderRef ref="LogToFile"/>
        </Logger>

        <Root level="INFO">
	        <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>