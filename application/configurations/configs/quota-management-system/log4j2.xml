<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="APP_LOG_ROOT">/var/seamless/log/quota-management-system</Property>
        <Property name="APP_LOG_FILE_NAME">quota-management-system.log</Property>
    </Properties>
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %-5p [%c{1}] - %X{ersReference} %m%n"/>
        </Console>
        <RollingFile name="LogToFile" fileName="${APP_LOG_ROOT}/${APP_LOG_FILE_NAME}"
                     append="true"
                     filePattern="${APP_LOG_ROOT}/${APP_LOG_FILE_NAME}.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{ISO8601} %-5p [%c{1}] %t - %X{ersReference} %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
        <RollingFile name="audit-feed-appender"
                     fileName="${APP_LOG_ROOT}/audit-dump/quota-management-audit-data.dump"
                     append="true"
                     filePattern="${APP_LOG_ROOT}/audit-dump/quota-management-audit-data.dump-%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="se.seamless" level="debug" additivity="false">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Logger name="com.seamless.common.data.dump.AuditFeeder" level="INFO" additivity="true">
            <AppenderRef ref="audit-feed-appender"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>
